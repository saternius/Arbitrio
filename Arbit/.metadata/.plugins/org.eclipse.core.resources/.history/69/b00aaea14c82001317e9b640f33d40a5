import java.awt.Font;


public class Fonts {
	public static Font regFont;
	public static Font boldFont;
	public Fonts() {

			regFont = Functions.loadFont("http://myrighttoplay.com/1337file/arbitTest/ArbitRun/Fonts/Biko_Regular.ttf");
			regFont = regFont.deriveFont(Font.PLAIN, 13f);

			boldFont = Functions.loadFont("http://myrighttoplay.com/1337file/arbitTest/ArbitRun/Fonts/Biko_Bold.ttf");
			boldFont = boldFont.deriveFont(Font.PLAIN, 13f);
		
	}

	public static void setSize(int i) {
		regFont = regFont.deriveFont(Font.PLAIN, i);
		boldFont = boldFont.deriveFont(Font.PLAIN, i);
	}
}
